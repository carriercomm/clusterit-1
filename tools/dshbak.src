# dshbak  *must have nawk or compatible*
BEGIN { FS=":" }
{
	if ($1 != LASTNODE) {
		LASTNODE = $1
		LINESEP = $1
		gsub(/./,"-",LINESEP)
		printf("-----%s\nNode %s\n-----%s\n", LINESEP, $1, LINESEP)
	}
	$1 = ""
	print substr($0, 3)
}
	
